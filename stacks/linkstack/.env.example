# LinkStack – copy to .env. All vars optional; defaults work for local use.

# Optional: timezone (default America/Denver)
# TZ=America/Denver

# Optional: admin email (Apache SERVER_ADMIN)
# SERVER_ADMIN=admin@example.com

# Optional: server names (set when behind Caddy so app knows its hostname)
# HTTP_SERVER_NAME=linkstack.home
# HTTPS_SERVER_NAME=linkstack.home

# Optional: Apache log level (trace8 … emerg)
# LOG_LEVEL=info

# Optional: PHP memory limit
# PHP_MEMORY_LIMIT=256M

# Optional: max upload size (e.g. avatars, custom CSS)
# UPLOAD_MAX_FILESIZE=8M
